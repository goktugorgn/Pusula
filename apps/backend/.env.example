# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# JWT
JWT_SECRET=change-this-to-a-secure-random-string

# Paths
CONFIG_PATH=/etc/unbound-ui/config.yaml
CREDENTIALS_PATH=/etc/unbound-ui/credentials.json
UPSTREAM_PATH=/var/lib/unbound-ui/upstream.json
BACKUP_DIR=/var/lib/unbound-ui/backups
AUDIT_LOG_PATH=/var/log/unbound-ui/audit.log

# Unbound
UNBOUND_MANAGED_CONF=/etc/unbound/unbound-ui-managed.conf

# Pi-hole (optional)
PIHOLE_ENABLED=false
PIHOLE_BASE_URL=http://localhost/admin/api.php
PIHOLE_API_TOKEN=
